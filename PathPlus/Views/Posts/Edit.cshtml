@model PathPlus.Models.Post

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}




@using (Html.BeginForm("Edit", "Posts", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div id="HomeContainer" class="container">
        <h2>編輯貼文</h2>
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.PostID)

            <div class="form-group">
                貼文內容
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PostContent, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PostContent, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                貼文類別
                <div class="col-md-10">
                    @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                貼文狀態
                <div class="col-md-10">
                    @Html.DropDownList("StatusCategoryID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StatusCategoryID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="儲存變更" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>