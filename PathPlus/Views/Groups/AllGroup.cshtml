@model PathPlus.Models.GroupViewModel
@{

    Layout = "~/Views/Shared/_IndexLayout.cshtml";
}

<div id="HomeContainer" class="container">
    
    <form method="post" action="@Url.Action("searchgroupshow","Groups")">
        <div class="row d-flex justify-content-center">
            <div class="mr-1"><input id="GroupName" name="GroupName" type="text" required class="form-control" /></div>
            <div class="ml-1 ">
                <input id="Submit1" type="submit" value="submit" class="btn btn-info" />
            </div>
            </div>
</form>
    
    <hr />
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            @{var a = 0;}
            @foreach (var m in Model.group)
            {

                if (a == 0)
                {
                    <div class="carousel-item active">
                        <a href="@Url.Action("GroupOne","Groups",new { GroupID=m.GroupID})"><img src="~/Groupphotos/@m.Photo" class="Xlarge large medium smedium smalll" /></a>
                        <div class="carousel-caption d-none d-md-block">
                            <h1><strong>@m.GroupName</strong></h1>
                            <p></p>
                        </div>
                    </div>
                    a++;
                }
                else
                {
                    <div class="carousel-item ">
                        <a href="@Url.Action("GroupOne","Groups",new { GroupID=m.GroupID})"><img src="~/Groupphotos/@m.Photo" class="Xlarge large medium smedium smalll" /></a>
                        <div class="carousel-caption d-none d-md-block">
                            <h1><strong>@m.GroupName</strong></h1>
                            <p></p>
                        </div>
                    </div>}

            }


        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <hr />
    <div class="row">


        @{var grouppostid = ""; }
        @foreach (var m in  Model.grouppostphotos)
        {
            if (grouppostid != m.GroupPostID)
            {

                <div class="col-sm-6 col-xs-12 col-md-4 p-2 " style="width:250px;height:250px">
                    <a href="@Url.Action("readpost","Groups",new {GroupPostID= m.GroupPostID})"><img src="~/Groupposts/@m.Photo" class="rounded img-thumbnail w-100 h-100" /></a>
                </div>
                grouppostid = m.GroupPostID;
            }
            else
            {

            }



        }

    </div>
</div>
<script src="~/Scripts/jquery-3.5.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/bootstrap.bundle.js"></script>




