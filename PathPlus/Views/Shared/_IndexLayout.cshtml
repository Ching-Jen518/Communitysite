    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Homepage.css" rel="stylesheet" />
    <srcipt src="~/Scripts/modernizr-2.8.3.js"></srcipt>
    <script src="https://kit.fontawesome.com/ffa7b6e8e7.js" crossorigin="anonymous"></script>
    <link href="~/Content/IndexTop.css" rel="stylesheet" />
</head>
<body>
    <div id="container " class="container">
        <!-----------------↓↓↓↓↓↓↓↓以下navbar↓↓↓↓↓↓↓↓------------>
        <!--------------------以下logo--------------------->
        <nav id="navbarbrand" class="row navbar border-bottom sticky-top">
            <div class="navbar-brand" href="#">
                <a href="@Url.Action("Index","Home")"><img src="image/登入頁用path.jpg" height="70" class="d-inline-block align-top" alt="" loading="lazy" /></a>
            </div>
            <!----------------以下searchbar-------------------->
            <div id="searchbar" class="">
